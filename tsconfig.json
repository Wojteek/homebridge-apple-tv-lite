{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/types/*": [
        "src/types/*"
      ]
    }
  },
  "files": [
    "src/index.ts",
    "node_modules/hap-nodejs/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
